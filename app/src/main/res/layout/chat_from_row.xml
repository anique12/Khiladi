<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <ImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:id="@+id/imageView_to_item"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:maxWidth="240dp"
            android:id="@+id/messageChatFromRow"
            android:background="@drawable/email_password_corners"
            android:text="@string/message"
            app:layout_constraintTop_toTopOf="@+id/imageView_to_item"
            app:layout_constraintStart_toEndOf="@+id/imageView_to_item" android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
    />

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_image_view_chat_from_row"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            app:civ_border_width="@dimen/dp_2"
            app:civ_border_color="@android:color/black"
            app:layout_constraintTop_toTopOf="@+id/imageView_to_item"
            app:layout_constraintEnd_toEndOf="@+id/imageView_to_item"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_to_item"
            app:layout_constraintStart_toStartOf="@+id/imageView_to_item"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>