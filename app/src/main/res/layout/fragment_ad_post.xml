<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
            android:id="@+id/imageBtnAdpost"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_120"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_50"
            android:background="@drawable/account"
            />

    <!--<de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_image_view_edit_account"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_120"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_centerHorizontal="true"
            app:civ_border_width="@dimen/dp_2"
            app:civ_circle_background_color="@color/black"
    />-->

    <EditText
            android:id="@+id/titleAdpost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageBtnAdpost"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/email_password_corners"
            android:textSize="@dimen/sp_16"
            android:hint="Title"
            android:padding="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            />

    <EditText
            android:id="@+id/descriptionAdpost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleAdpost"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/email_password_corners"
            android:textSize="@dimen/sp_16"
            android:hint="Description"
            android:padding="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            />


    <EditText
            android:id="@+id/PriceAdPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/descriptionAdpost"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/email_password_corners"
            android:textSize="@dimen/sp_16"
            android:hint="Price"
            android:inputType="number"
            android:padding="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            />



    <Button
            android:id="@+id/selectSportsAdpost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/PriceAdPost"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/email_password_corners"
            android:textSize="@dimen/sp_12"
            android:text="@string/select_sport"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_25"
            />
    <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
            android:id="@+id/nextBtnAdpost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/selectSportsAdpost"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/sp_16"
            android:textColor="@android:color/white"
            android:text="@string/next"
            app:spinning_bar_width="4dp"
            app:spinning_bar_color="@android:color/white"
            android:background="@drawable/login_button_corners"
            />

</RelativeLayout>
</layout>