<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".createEvent.EventCategory">

    
    <LinearLayout
            android:gravity="bottom"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
    <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/horizontal_line"/>

    <ImageView
            android:layout_width="@dimen/sp_20"
            android:layout_marginLeft="-10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/horizontal_line"/>

        <ImageView
                android:layout_width="@dimen/sp_20"
                android:layout_marginLeft="-10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/horizontal_line"/>


        <ImageView
                android:layout_width="@dimen/sp_20"
                android:layout_marginLeft="-10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/horizontal_line"/>
    </LinearLayout>
    <!-- TODO: Update blank fragment layout -->
    <TextView
            android:id="@+id/singleEvent"
            android:layout_margin="@dimen/dp_25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:drawablePadding="@dimen/dp_20"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:textColor="@android:color/black"
            android:text="Single Event" />

    <TextView
            android:id="@+id/teamEvent"
            android:layout_margin="@dimen/dp_25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/team"
            android:drawablePadding="@dimen/dp_20"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:text="Team Event" />
</LinearLayout>