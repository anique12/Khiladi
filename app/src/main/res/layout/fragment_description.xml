<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".createPlaceAd.CategoryAndDescription">


    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:text="Create Ad"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

    </androidx.appcompat.widget.Toolbar>


    <View
            android:id="@+id/view_separater"
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:layout_below="@id/toolBar"
            android:background="@drawable/separater"
            app:layout_constraintBottom_toBottomOf="@+id/toolBar" />

    <LinearLayout
            android:id="@id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolBar"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
        <TextView
                android:backgroundTint="@android:color/darker_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/horizontal_line"/>
        <TextView
                android:backgroundTint="@android:color/darker_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/horizontal_line"/>
        <TextView
                android:backgroundTint="@android:color/holo_purple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/horizontal_line"/>

        <TextView
                android:backgroundTint="@android:color/darker_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/horizontal_line"/>
    </LinearLayout>

    <RelativeLayout
            android:id="@+id/descL"
               android:layout_below="@id/navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/titleL"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                    android:id="@+id/title"
                    android:padding="10dp"
                    android:maxLines="2"
                    android:textSize="16sp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/title" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/descLayout"
                android:layout_marginTop="10dp"
                android:layout_below="@id/titleL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                    android:id="@+id/description"
                    android:padding="10dp"
                    android:maxLines="2"
                    android:textSize="16sp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/description" />

        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
                android:layout_below="@id/descLayout"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/priceLayout"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content">

                <EditText
                        android:id="@+id/price"
                        android:padding="10dp"
                        android:maxLines="1"
                        android:textSize="16sp"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/price" />

            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                    android:id="@+id/price_spinner"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="0.5"
                    android:layout_gravity="bottom"
                    android:layout_height="wrap_content" />
        </LinearLayout>


</RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/navigation">

        <RelativeLayout
                android:id="@+id/btnLayout"
                android:layout_alignParentBottom="true"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Button
                    android:id="@+id/previousButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginBottom="@dimen/dp_25"
                    android:background="@android:color/holo_blue_light"
                    android:text="Previous"
                    android:textColor="@android:color/white" />

            <Button
                    android:id="@+id/nextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_25"
                    android:background="@android:color/holo_purple"
                    android:text="Next"
                    android:textColor="@android:color/white" />
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
</layout>