<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.EditPlace">

    <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolBar"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

        <TextView
                android:id="@+id/titleName"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:textSize="@dimen/sp_20"
                android:textColor="@android:color/white" />

        <TextView
                android:id="@id/save"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                    android:text="@string/save"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                android:layout_weight="0.2"
                android:textColor="@android:color/white"/>
    </LinearLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <ScrollView
            android:layout_below="@id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
    <LinearLayout
            android:id="@+id/titleL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginTop="@dimen/sp_20"
            android:background="@drawable/textview_corners"
            android:backgroundTint="@color/blue_background"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:layout_below="@id/toolBar"
                    android:padding="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@android:color/black"
                    android:text="Title"/>


            <TextView
                    android:id="@+id/editTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/toolBar"
                    android:layout_gravity="end"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_15"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="end"
                    android:paddingTop="@dimen/dp_10"
                    android:text="Edit"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/toolBar"
                android:layout_marginLeft="@dimen/dp_30"
                android:fontFamily="@font/lato_light"
                android:padding="@dimen/dp_10"
                android:text="text"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <LinearLayout
            android:id="@+id/descL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/textview_corners"
            android:backgroundTint="@color/blue_background"
            android:layout_below="@id/titleL"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:layout_below="@id/toolBar"
                    android:padding="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@android:color/black"
                    android:text="Description"/>


            <TextView
                    android:id="@+id/editDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/toolBar"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:fontFamily="@font/lato_regular"
                    android:text="Edit"
                    android:layout_marginRight="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_10"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/toolBar"
                android:layout_marginLeft="@dimen/dp_30"
                android:fontFamily="@font/lato_light"
                android:padding="@dimen/dp_10"
                android:text="text"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_14" />

    </LinearLayout>


    <LinearLayout
            android:id="@+id/timings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/textview_corners"
            android:backgroundTint="@color/blue_background"
            android:layout_below="@id/descL"
            android:orientation="vertical">

        <LinearLayout
                android:id="@+id/timingsL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:layout_below="@id/toolBar"
                    android:padding="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@android:color/black"
                    android:text="Timings"/>


            <TextView
                    android:id="@+id/editTimings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/toolBar"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:fontFamily="@font/lato_regular"
                    android:text="Edit"
                    android:layout_marginRight="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_10"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/toolBar"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:fontFamily="@font/lato_light"
                    android:padding="@dimen/sp_12"
                    android:text="Monday"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_14" />

            <TextView
                    android:id="@+id/mondayTiming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/toolBar"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:fontFamily="@font/lato_light"
                    android:padding="@dimen/dp_10"
                    android:gravity="end"
                    android:text="10am - 12pm"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/toolBar"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:fontFamily="@font/lato_light"
                    android:padding="@dimen/sp_12"
                    android:text="Tuesday"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_14" />

            <TextView
                    android:id="@+id/tuesdayTiming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/toolBar"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:fontFamily="@font/lato_light"
                    android:padding="@dimen/dp_10"
                    android:gravity="end"
                    android:text="text"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/toolBar"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:fontFamily="@font/lato_light"
                    android:padding="@dimen/sp_12"
                    android:text="Wednesday"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_14" />

            <TextView
                    android:id="@+id/wednesdayTiming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/toolBar"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:fontFamily="@font/lato_light"
                    android:padding="@dimen/dp_10"
                    android:gravity="end"
                    android:text="text"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/toolBar"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:fontFamily="@font/lato_light"
                    android:padding="@dimen/sp_12"
                    android:text="Thursday"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_14" />

            <TextView
                    android:id="@+id/thursdayTiming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/toolBar"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:fontFamily="@font/lato_light"
                    android:padding="@dimen/dp_10"
                    android:gravity="end"
                    android:text="text"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/toolBar"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:fontFamily="@font/lato_light"
                    android:padding="@dimen/sp_12"
                    android:text="Friday"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_14" />

            <TextView
                    android:id="@+id/fridayTiming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/toolBar"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:fontFamily="@font/lato_light"
                    android:padding="@dimen/dp_10"
                    android:gravity="end"
                    android:text="text"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/toolBar"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:fontFamily="@font/lato_light"
                    android:padding="@dimen/sp_12"
                    android:text="Saturday"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_14" />

            <TextView
                    android:id="@+id/saturdayTiming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/toolBar"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:fontFamily="@font/lato_light"
                    android:padding="@dimen/dp_10"
                    android:gravity="end"
                    android:text="text"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/toolBar"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:fontFamily="@font/lato_light"
                    android:padding="@dimen/sp_12"
                    android:text="Sunday"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_14" />

            <TextView
                    android:id="@+id/sundayTiming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/toolBar"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:fontFamily="@font/lato_light"
                    android:padding="@dimen/dp_10"
                    android:gravity="end"
                    android:text="text"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_14" />

        </LinearLayout>

    </LinearLayout>

    <View
            android:id="@+id/separater1"
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:layout_below="@id/timings"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_30"
            android:background="@color/light_grey" />

    <LinearLayout
            android:id="@+id/timeNegoL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:weightSum="1"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_below="@id/separater1"
            android:orientation="horizontal">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:layout_weight="0.8"
                android:fontFamily="@font/lato_regular"
                android:textColor="@android:color/black"
                android:text="Do not recieve requests from other timings"/>

        <Switch
                android:id="@+id/otherTimings"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:gravity="end" />

    </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
</layout>