<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".createEvent.Schedule">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <devs.mulham.horizontalcalendar.HorizontalCalendarView
                    android:layout_marginTop="@dimen/dp_20"
                    android:id="@+id/calender"
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            <TextView
                    android:id="@+id/timeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="@dimen/dp_50"
                    android:layout_below="@id/calender"
                    android:layout_marginTop="@dimen/dp_50"/>

            <Button
                    android:id="@+id/selectTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/calender"
                    android:layout_toEndOf="@id/timeTextView"
                    android:layout_marginTop="@dimen/dp_50"
                    android:layout_marginLeft="@dimen/dp_50"
                    android:text="Select Time"/>


            <Switch
                    android:id="@+id/timeNego"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/dp_20"
                    android:layout_below="@id/selectTime"
                    android:textSize="@dimen/sp_20"
                    android:layout_marginTop="@dimen/dp_40"
                    android:text="Time Negotiable"
                    android:paddingStart="@dimen/dp_20"/>

            <Switch
                    android:id="@+id/dateNego"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/dp_20"
                    android:layout_below="@id/timeNego"
                    android:textSize="@dimen/sp_20"
                    android:layout_marginTop="@dimen/dp_40"
                    android:text="Date Negotiable"
                    android:paddingStart="@dimen/dp_20"/>

            <Switch
                    android:id="@+id/placeNego"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/dp_20"
                    android:layout_below="@id/dateNego"
                    android:textSize="@dimen/sp_20"
                    android:layout_marginTop="@dimen/dp_40"
                    android:text="Place Negotiable"
                    android:paddingStart="@dimen/dp_20"/>

            <Switch
                    android:id="@+id/urgent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/dp_20"
                    android:layout_below="@id/placeNego"
                    android:textSize="@dimen/sp_20"
                    android:layout_marginTop="@dimen/dp_40"
                    android:text="Urgent Event"
                    android:paddingStart="@dimen/dp_20"/>

            <TextView
                    android:id="@+id/desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/urgent"
                    android:layout_margin="@dimen/dp_10"
                    android:text="It will disappear after 2 hours"/>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_100"
                    android:layout_marginTop="@dimen/dp_40"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:hint="Description"
                    android:padding="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_100"
                    android:background="@drawable/simple_stroke"
                    android:textSize="@dimen/sp_18"
                    android:layout_below="@id/desc"/>

        </RelativeLayout>
    </ScrollView>
    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
            android:id="@+id/btnLayout"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/previousButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_25"
                android:background="@android:color/holo_blue_light"
                android:text="Previous"
                android:textColor="@android:color/white" />

        <Button
                android:id="@+id/doneButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_25"
                android:background="@android:color/holo_purple"
                android:text="Done"
                android:textColor="@android:color/white" />
    </RelativeLayout>


</RelativeLayout>
</layout>