<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".PlaceDescription">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false">

        <RelativeLayout
                android:layout_marginLeft="@dimen/sp_20"
                android:layout_marginRight="@dimen/sp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <RelativeLayout
                    android:id="@+id/upper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/postedby"
                        android:text="Posted By"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp_16"
                        android:padding="@dimen/dp_10"
                        android:fontFamily="@font/lato_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/edit"
                        android:text="Edit"
                        android:visibility="visible"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp_16"
                        android:padding="@dimen/dp_10"
                        android:gravity="right"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="right"
                        android:fontFamily="@font/lato_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </RelativeLayout>



            <androidx.cardview.widget.CardView
                    android:id="@+id/profilePlaceDescription"
                    style="@style/CardView.Light"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_below="@id/upper"
                    app:cardElevation="@dimen/dp_2"
                    app:cardCornerRadius="@dimen/dp_2"
                    app:cardPreventCornerOverlap="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:id="@+id/profilePhotoPlaceDescription"
                            android:background="@drawable/no_image_gradient"
                            android:layout_width="75dp"
                            android:scaleType="centerCrop"
                            android:layout_height="75dp" />

                    <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_20"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <TextView
                                android:id="@+id/namePlaceDescription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Anique Sabir"
                                android:textSize="@dimen/sp_16"
                                android:fontFamily="@font/lato_regular"
                                android:textColor="@android:color/black"
                                />

                        <RatingBar
                                android:id="@+id/ratingBarPlaceDescription"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_marginTop="@dimen/dp_5"/>

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                    android:id="@+id/about"
                    android:text="About"
                    android:layout_below="@id/profilePlaceDescription"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_16"
                    android:padding="@dimen/dp_10"
                    android:fontFamily="@font/lato_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                    android:id="@+id/titleDescription"
                    style="@style/CardView.Light"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_5"
                    app:cardElevation="@dimen/dp_2"
                    app:cardCornerRadius="@dimen/dp_2"
                    android:layout_below="@id/about"
                    app:cardPreventCornerOverlap="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    <TextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:fontFamily="@font/lato_bold"
                            android:padding="@dimen/dp_10"
                            android:textColor="@android:color/black"
                            android:text="@string/title"/>

                    <TextView
                            android:id="@+id/description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_10"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="@dimen/sp_16"
                            android:layout_below="@id/title"
                            android:text="@string/title"/>

                    <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_10"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="@dimen/sp_16"
                            android:layout_below="@id/description"
                            android:text="@string/title"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <TextView
                    android:id="@+id/photos"
                    android:text="Photos"
                    android:layout_below="@id/titleDescription"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_16"
                    android:padding="@dimen/dp_10"
                    android:fontFamily="@font/lato_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            <androidx.cardview.widget.CardView
                    android:id="@+id/sliderCardView"
                    style="@style/CardView.Light"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_5"
                    app:cardElevation="@dimen/dp_2"
                    app:cardCornerRadius="@dimen/dp_2"
                    app:cardPreventCornerOverlap="true"
                    android:layout_below="@id/photos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            <com.custom.sliderimage.logic.SliderImage
                    android:id="@+id/imagesliderPlaceDescription"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_200"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/lato_regular"
                    android:background="@drawable/no_image_gradient"
                    android:scaleType="centerCrop"
                    />

            </androidx.cardview.widget.CardView>


            <TextView
                    android:id="@+id/map"
                    android:text="Map"
                    android:layout_below="@id/sliderCardView"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_16"
                    android:padding="@dimen/dp_10"
                    android:fontFamily="@font/lato_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            <androidx.cardview.widget.CardView
                    android:id="@+id/mapCardView"
                    style="@style/CardView.Light"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    app:cardElevation="@dimen/dp_2"
                    app:cardCornerRadius="@dimen/dp_2"
                    app:cardPreventCornerOverlap="true"
                    android:layout_below="@id/map"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/mapPlaceDescription"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_200"
                    android:src="@drawable/no_image_gradient"
                    android:scaleType="centerCrop"
                    android:background="@drawable/no_image_gradient" />

            </androidx.cardview.widget.CardView>
            <LinearLayout
                    android:id="@+id/timings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_40"
                    android:background="@drawable/textview_corners"
                    android:backgroundTint="@color/blue_background"
                    android:layout_below="@id/mapCardView"
                    android:orientation="vertical">

                <LinearLayout
                        android:id="@+id/timingsL"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_16"
                            android:layout_below="@id/toolBar"
                            android:padding="@dimen/dp_10"
                            android:layout_marginLeft="@dimen/dp_30"
                            android:fontFamily="@font/lato_regular"
                            android:textColor="@android:color/black"
                            android:text="Timings"/>


                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/toolBar"
                            android:layout_marginLeft="@dimen/dp_30"
                            android:fontFamily="@font/lato_regular"
                            android:text="Monday"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/sp_14" />

                    <TextView
                            android:id="@+id/mondayTiming"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/toolBar"
                            android:layout_marginLeft="@dimen/dp_30"
                            android:fontFamily="@font/lato_regular"
                            android:padding="@dimen/dp_10"
                            android:gravity="end"
                            android:text="10am - 12pm"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/sp_14" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/toolBar"
                            android:layout_marginLeft="@dimen/dp_30"
                            android:fontFamily="@font/lato_regular"
                            android:text="Tuesday"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/sp_14" />

                    <TextView
                            android:id="@+id/tuesdayTiming"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/toolBar"
                            android:layout_marginLeft="@dimen/dp_30"
                            android:fontFamily="@font/lato_regular"
                            android:padding="@dimen/dp_10"
                            android:gravity="end"
                            android:text="text"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/sp_14" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/toolBar"
                            android:layout_marginLeft="@dimen/dp_30"
                            android:fontFamily="@font/lato_regular"
                            android:text="Wednesday"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/sp_14" />

                    <TextView
                            android:id="@+id/wednesdayTiming"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/toolBar"
                            android:layout_marginLeft="@dimen/dp_30"
                            android:fontFamily="@font/lato_regular"
                            android:padding="@dimen/dp_10"
                            android:gravity="end"
                            android:text="text"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/sp_14" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/toolBar"
                            android:layout_marginLeft="@dimen/dp_30"
                            android:fontFamily="@font/lato_regular"
                            android:text="Thursday"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/sp_14" />

                    <TextView
                            android:id="@+id/thursdayTiming"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/toolBar"
                            android:layout_marginLeft="@dimen/dp_30"
                            android:fontFamily="@font/lato_regular"
                            android:padding="@dimen/dp_10"
                            android:gravity="end"
                            android:text="text"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/sp_14" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/toolBar"
                            android:layout_marginLeft="@dimen/dp_30"
                            android:fontFamily="@font/lato_regular"
                            android:text="Friday"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/sp_14" />

                    <TextView
                            android:id="@+id/fridayTiming"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/toolBar"
                            android:layout_marginLeft="@dimen/dp_30"
                            android:fontFamily="@font/lato_regular"
                            android:padding="@dimen/dp_10"
                            android:gravity="end"
                            android:text="text"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/sp_14" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/toolBar"
                            android:layout_marginLeft="@dimen/dp_30"
                            android:fontFamily="@font/lato_regular"
                            android:text="Saturday"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/sp_14" />

                    <TextView
                            android:id="@+id/saturdayTiming"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/toolBar"
                            android:layout_marginLeft="@dimen/dp_30"
                            android:fontFamily="@font/lato_regular"
                            android:padding="@dimen/dp_10"
                            android:gravity="end"
                            android:text="text"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/sp_14" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/toolBar"
                            android:layout_marginLeft="@dimen/dp_30"
                            android:fontFamily="@font/lato_regular"
                            android:text="Sunday"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/sp_14" />

                    <TextView
                            android:id="@+id/sundayTiming"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/toolBar"
                            android:layout_marginLeft="@dimen/dp_30"
                            android:fontFamily="@font/lato_regular"
                            android:padding="@dimen/dp_10"
                            android:gravity="end"
                            android:text="text"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/sp_14" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>


    </ScrollView>

    <Button
            android:id="@+id/bookPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/email_password_corners"
            android:text="Book this place"/>
    </RelativeLayout>
</layout>