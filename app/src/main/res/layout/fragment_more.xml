<?xml version="1.0" encoding="utf-8"?>
<layout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.More">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilePic_more"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_60"
                android:layout_weight="0.2"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_gravity="center_vertical"
                android:background="@drawable/account"/>

        <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:layout_gravity="center_vertical"
               >

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical">

                <TextView
                        android:id="@+id/currentKhiladiname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_20"
                        android:layout_weight="0.5"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View your profile"
                        android:layout_weight="0.5"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
            android:id="@+id/view_separater"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/black"
            android:layout_below="@id/profile_layout"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_separater">


    </LinearLayout>

    <LinearLayout
            android:layout_below="@id/view_separater"
            android:id="@+id/discover_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_20"
            android:weightSum="1">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_30"
            android:layout_weight="0.1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/account"/>

    <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:layout_gravity="center_vertical"
            >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discover khiladi"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black"/>

    </LinearLayout>


    </LinearLayout>

    <View
            android:id="@+id/view_separater2"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_below="@id/discover_people"/>


    <LinearLayout
            android:layout_below="@id/view_separater2"
            android:id="@+id/discover_teams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_20"
            android:weightSum="1">

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_30"
                android:layout_weight="0.1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@drawable/account"/>

        <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:layout_gravity="center_vertical"
                >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discover Teams"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="@color/black"/>

        </LinearLayout>


    </LinearLayout>

    <View
            android:id="@+id/view_separater3"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_below="@id/discover_teams"/>

    <LinearLayout
            android:layout_below="@id/view_separater3"
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_20"
            android:weightSum="1">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_30"
            android:layout_weight="0.1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/account"/>

    <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:layout_gravity="center_vertical"
            >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/sp_16"
                android:layout_marginLeft="@dimen/dp_5"
                android:textColor="@color/black"/>
    </LinearLayout>

    </LinearLayout>

    <View
            android:id="@+id/view_separater4"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_below="@id/logout"/>
</RelativeLayout>
</layout>
